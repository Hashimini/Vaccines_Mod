<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- =========================== -->
  <!--   INFECTION VACCINE ITEM    -->
  <!-- =========================== -->
    <ThingDef ParentName="DrugBase">
        <defName>Vaccine_Infection</defName>

        <label>Infection Vaccine</label>
        <description>A sterile syringe containing an engineered immunogenic solution that grants lasting immunity against infections.\nDesigned to prevent bacterial wound infections. Once administered, the subject gains strong resistance to Infection.</description> 
        <descriptionHyperlinks>
            <ThingDef>HemogenPack</ThingDef>
        </descriptionHyperlinks>
        <techLevel>Industrial</techLevel>

        <graphicData>
            <texPath>Things/Item/Drug/Vaccines/Vaccine_Infection</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <rotatable>false</rotatable>

        <statBases>
            <WorkToMake>1200</WorkToMake>
            <MarketValue>6000</MarketValue>
            <Mass>0.03</Mass>
        </statBases>

        <ingestible>
            <foodType>Processed</foodType>
            <drugCategory>Medical</drugCategory>
            <baseIngestTicks>660</baseIngestTicks>
            <chairSearchRadius>20</chairSearchRadius>
            <nurseable>true</nurseable>
            <ingestSound>Wear_PowerArmor</ingestSound>
            <outcomeDoers>
                <li Class="IngestionOutcomeDoer_GiveHediff">
                    <hediffDef>Vaccine_Infection_Immunity</hediffDef>
                    <severity>1.0</severity>
                </li>
            </outcomeDoers>
        </ingestible>

        <comps>
            <li Class="CompProperties_Drug">
                <listOrder>40</listOrder>
            </li>
        </comps>

        <soundInteract>Wear_PowerArmor</soundInteract>
        <stackLimit>6</stackLimit>

    </ThingDef>

</Defs>