<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- =========================== -->
  <!--   INFECTION VACCINE RECIPE  -->
  <!-- =========================== -->
  <RecipeDef Abstract="False">

    <defName>Produce_Vaccine_Infection</defName>

    <label>Produce a vaccine against infection</label>
    <description>Use blood samples and chemichal components to sintetize and produce an Vaccine that prevents WoundInfection.</description>
    <descriptionHyperlinks>
      <ThingDef>HemogenPack</ThingDef>
      <ThingDef>Neutroamine</ThingDef>
      <ThingDef>Vaccine_Infection</ThingDef>
    </descriptionHyperlinks>

    <jobString>Producing one anti-infection vaccine.</jobString>
    <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
    <workAmount>4000</workAmount>
    <workSkill>Medicine</workSkill>
    <workSkillLearnFactor>100</workSkillLearnFactor>
    <skillRequirements>
      <Medicine>14</Medicine>
    </skillRequirements>

    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Drug</soundWorking>

    <displayPriority>1001</displayPriority>

    <researchPrerequisite>Vaccines_Unlock_Infection</researchPrerequisite>

    <recipeUsers>
      <li>DrugLab</li>
    </recipeUsers>

    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>HemogenPack</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Neutroamine</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>

    <products>
      <Vaccine_Infection>1</Vaccine_Infection>
    </products>

  </RecipeDef>
</Defs>